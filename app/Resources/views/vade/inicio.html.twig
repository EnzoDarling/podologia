{% extends 'base.html.twig' %}
    {% block body %}
        <div class="FormWrapper">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="page-header">Vademecum</h2>
                    <a href="/vademecum/crear" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva Posología</a>
                    <table class="table table-striped">
                        <div class="input-group">                            
                            </span>
                        </div>
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Posología</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for vademecum in vademecum %}
                            <tr>
                                <th scope="row">{{vademecum.id}}</th>
                                <td>{{vademecum.vadeNombre}}</td>
                                <td>{{vademecum.vadePosologia}}</td>
                                
